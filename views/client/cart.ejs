<section class="cart">
    <% if(session.cart) { %>
    <div class="order container mx-auto w-1/2 pt-10">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizza-list">
            <% for(const pizzaCart of Object.values(session.cart.items)) {%>
            <div class="flex items-center my-8">
                <img class="w-24" src="/img/<%= pizzaCart.pizza.image %>" alt="">
                <div class="flex-1 ml-4">
                    <h1><%= pizzaCart.pizza.name %></h1>
                    <span><%= pizzaCart.pizza.size %></span>
                </div>  
                <span class="flex-1"><%= pizzaCart.qty %></span>
                <span class="font-bold"><%= pizzaCart.pizza.price * pizzaCart.qty %>$</span>    
            </div>
            <% } %>
            <hr>
            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Price: </span>
                    <span class="amount text-2xl font-bold ml-2"><%= session.cart.totalPrice %>$</span>
                </div>
                <div>
                    <form action="" class="mt-8">
                        <input class="border border-gray-400 mt-4 p-2 w-1/2" type="text" placeholder="Address">
                        <input class="border border-gray-400 mt-4  p-2 w-1/2" type="text" placeholder="Phone Number">
                        <div>
                            <button class="btn-order px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">
                                Order Now!
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <% } else { %>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2"> Cart Empty</h1>
            <p>You probably havent ordered a pizza yet.<br>To order a pizza go to the main page.</p>
            <img  class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="">
            <a href="/" class="inline-block px-6 py-2 rounded-full text-white font-bold mt-8">Go back</a>
        </div>
    </div>
    <% } %>
</section>

    <section class="hero">
        <div class="container mx-auto items-center flex justify-between">
            <div class="w-1/2">
                <h6 class="text-lg"><em>Are you hungry?</em></h6>
                <h1 class="text-6xl font-bold">Pizza is your choice.</h1>
                <button class="px-6 py-2 rounded-full text-white font-bold mt-3">Order Now!</button>
            </div>
            <div class="w-1/2">
                <img src="/img/hero-pizza.png">
            </div>
        </div>
    </section>
    <section class="menu container mx-auto py-8">
        <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
        <div class="grid grid-cols-4 gap-x-10 gap-y-14">

            <% for(const pzmenu of pizzaMenu) {%>
            <div class="w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= pzmenu.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"> <%= pzmenu.name %></h2>
                    <span class="size py-1 px-4 rounded-full text-xs"> <%= pzmenu.size %> </span>
                    <div class="flex items-center justify-around mt-5">
                        <span class="font-bold text-lg"><%= pzmenu.price %> $</span>
                        <button data-pizza="<%= JSON.stringify(pzmenu) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span>Add</span>
                        </button>
                    </div>
                </div>
            </div>   
            <% } %>
        </div>
    </section>

